<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.applh.lightbike"
      android:versionCode="9"
      android:versionName="2.09.c"
      android:installLocation="auto">
    <uses-sdk android:minSdkVersion="8" android:targetSdkVersion="8" />
    
    <!-- Tell the system this app requires OpenGL ES 1.1. -->
    <uses-feature android:glEsVersion="0x00010001" android:required="true" />
    
    <application android:icon="@drawable/icon" android:label="@string/app_name">
        <activity android:name=".LightBike"
                  android:label="@string/app_name" android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
		<activity android:name=".Preferences" android:label="@string/preferences_title"></activity>
  </application>
</manifest>